<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".Results.SearchResultsFragment"
              android:orientation="vertical">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We recommend you shop at.."
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:textSize="15sp"
            android:layout_marginTop="25dp"/>

    <TextView
            android:id="@+id/store_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="fbjksdfj"
            android:textColor="@color/orange"
            android:textSize="50sp"
            android:gravity="center_horizontal"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="21 Jump Street, City, ON, B1A 4A4"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="20sp"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your total grocery estimate is:"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:textSize="15sp"
            android:layout_marginTop="20dp"/>

    <TextView
            android:id="@+id/total_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$2344"
            android:textColor="@color/orange"
            android:textSize="50sp"
            android:gravity="center_horizontal"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Shopping List Breakdown:"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"/>

    <ListView
            android:id="@+id/grocery_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="10dp"/>

</LinearLayout>