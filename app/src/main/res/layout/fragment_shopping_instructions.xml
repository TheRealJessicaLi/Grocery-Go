<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent" android:layout_height="match_parent"
              tools:context=".SelectGroceries.ShoppingInstructionsFragment"
              android:orientation="vertical">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add items to your list and click ‘Finalize’ to see our recommended shopping location!"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:padding="25dp"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Shopping List:"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Currently, there are no items on your list."
            android:textColor="@color/black"
            android:textSize="15dp"
            android:padding="25dp"/>

    <Button
            android:id="@+id/next_button"
            android:layout_margin="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/location_field"
            android:background="@drawable/button_background"
            android:text="Add to List"
            android:layout_gravity="center_horizontal"/>

</LinearLayout>